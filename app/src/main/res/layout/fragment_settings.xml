    <View
        android:id="@+id/view_sittings3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:layout_marginLeft="@dimen/_4sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:background="@drawable/backgronund_color"
        android:outlineAmbientShadowColor="#111"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/change_language_tv" />

    <TextView
        android:id="@+id/dark_mode_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_6sdp"
        android:drawableStart="@drawable/ic_dark_mode1"
        android:drawablePadding="10dp"
        android:paddingStart="@dimen/_5sdp"
        android:text="@string/dark_mode"
        android:textColor="#000"
        android:textSize="@dimen/_18sdp"
        app:layout_constraintEnd_toEndOf="@id/emergency_tv"
        app:layout_constraintStart_toStartOf="@id/emergency_tv"
        app:layout_constraintTop_toBottomOf="@id/view_sittings3" />

    <Switch
        android:id="@+id/dark_mode_sw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
